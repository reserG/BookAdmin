    </resultMap>

    <select id="getPriceFromDMForSM" parameterType="Suppliers" resultType="Integer">
       select sum(price * count) totalPrice from bookdemandlibrary where supplierID = #{id} and warehousing = 1;
    </select>
    <select id="getPriceFromSBDMForSM" parameterType="Suppliers" resultType="Integer">
        select sum(price * count) totalPrice from schoolbookdemandlibrary where supplierID =#{id}  and warehousing = 1;
    </select>

    <select id="listAll" parameterType="Suppliers" resultMap="supplierResultMap">
        select * from supplierSM s left join user u on s.userID1 = u.id inner join supplier sup on sup.id = s.id
        <where>
            <if test="supplier!=null and supplier!= ''">and sup.supplier like "%"#{supplier}"%"</if>
        </where>
    </select>

    <select id="listAllSUP" parameterType="Suppliers" resultMap="supplierResultMap">
        select * from supplier
        <where>
            <if test="supplier!=null and supplier!= ''">and supplier like "%"#{supplier}"%"</if>
            <if test="phone!=null and phone!= ''">and phone like "%"#{phone}"%"</if>
        </where>
    </select>
    <select id="getDataCountSUP"  resultType="Integer" parameterType="Suppliers">
        select count(1) from supplier
        <where>
            <if test="supplier!=null and supplier!= ''">and supplier like "%"#{supplier}"%"</if>
            <if test="phone!=null and phone!= ''">and phone like "%"#{phone}"%"</if>
        </where>
    </select>

        <select id="getDataCount"  resultType="Integer" parameterType="Suppliers">
            select count(1) from supplierSM s inner join supplier sup on sup.id = s.id
            <where>
                <if test="supplier!=null and supplier!= ''">and sup.supplier like "%"#{supplier}"%"</if>
            </where>
        </select>

    <select id="listAllM" parameterType="Suppliers" resultMap="supplierResultMap">
        select * from supplierSM p left join user u on p.userID1 = u.id inner join supplier sup on sup.id = p.id where status1 = 1
            <if test="supplier!=null and supplier!= ''">and supplier like "%"#{supplier}"%"</if>
    </select>

    <select id="getDataCountM"  resultType="Integer" parameterType="Suppliers">
        select count(1) from supplierSM where status1 = 1
            <if test="supplier!=null and supplier!= ''">and supplier like "%"#{supplier}"%"</if>
    </select>

    <update id="update" parameterType="Suppliers">
        update supplierSM set totalPrice = #{totalPrice} where id = #{id}
    </update>

    <update id="updateForSuperAdmin" parameterType="Suppliers">
        update supplierSM set status1 = #{util.status1},status3 = #{util.status1},time1 = #{util.time1},userID1 = #{util.userID1} where id = #{id}
    </update>

    <update id="updateForMoney" parameterType="Suppliers">
        update supplierSM set status2 = #{util.status2},time2 = #{util.time2},userID2 = #{util.userID2} where id = #{id}
    </update>

    <update id="updateForMoneyR" parameterType="Suppliers">
        update supplierSM set status3 = #{util.status3},status2 = 0,time2 = #{util.time2},userID2 = #{util.userID2} where id = #{id}
    </update>

    <update id="insert" parameterType="Suppliers">
        insert into supplierSM(id,totalPrice,status1,status3) values (#{id},#{totalPrice},0,1)on duplicate key update totalPrice = totalPrice + #{totalPrice};
    </update>
    <insert id="insertSUP" parameterType="Suppliers">
        insert into supplier(supplier,phone) values (#{supplier},#{phone})
    </insert>

